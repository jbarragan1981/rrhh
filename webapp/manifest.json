{
  "_version": "1.32.0",
  "sap.app": {
    "id": "rrhh.rrhh",
    "type": "application",
    "i18n": "i18n/i18n.properties",
    "applicationVersion": {
      "version": "0.0.1"
    },
    "title": "{{appTitle}}",
    "description": "{{appDescription}}",
    "dataSources": {
        "ZEMPLOYEES_SRV": {
            "uri": "sap/opu/odata/sap/ZEMPLOYEES_SRV/",
            "type": "OData",
            "settings": {
                "odataVersion": "2.0",
                "localUri": "model/metadata.xml"
            }
        }        
    }
  },
  "sap.ui": {
    "technology": "UI5",
    "icons": {
      "icon": "",
      "favIcon": "",
      "phone": "",
      "phone@2": "",
      "tablet": "",
      "tablet@2": ""
    },
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    }
  },
  "sap.ui5": {
    "flexEnabled": true,
    "dependencies": {
      "minUI5Version": "1.97.0",
      "libs": {
        "sap.ui.core": {}
      }
    },
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
    "models": {
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "rrhh.rrhh.i18n.i18n"
        }
      },
    "empleadosModel": {
            "dataSource": "ZEMPLOYEES_SRV",
            "preload": true,
            "settings": {
                "defaultOperationMode": "Server",
                "defaultBindingMode": "TwoWay",
                "defaultCountMode": "Request",
                "refreshAfterChange": false,
                "useBatch": false,
                "defaultUpdateMethod": "Put"
            }
        }
    },
    "resources": {
      "css": [
        {
          "uri": "css/style.css"
        }
      ]
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "viewType": "XML",
        "async": true,
        "viewPath": "rrhh.rrhh.view",
        "controlAggregation": "pages",
        "controlId": "app",
        "clearControlAggregation": true
      },
      "routes": [
        {
          "name": "MenuApp",
          "pattern": "",
          "target": [
            "MenuApp"
          ]
        },
        {
            "name": "CrearEmpleado",
            "pattern": "CrearEmpleado",
            "target": [
              "CrearEmpleado"
            ]
          },
          {
            "name": "VerEmpleado",
            "pattern": "VerEmpleado",
            "target": [
              "VerEmpleado"
            ]
          }            
      ],
      "targets": {
        "MenuApp": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": true,
          "viewId": "MenuApp",
          "viewName": "MenuApp"
        },
        "CrearEmpleado": {
            "viewType": "XML",
            "transition": "slide",
            "clearControlAggregation": true,
            "viewId": "CrearEmpleado",
            "viewName": "CrearEmpleado"
          },
          "VerEmpleado": {
            "viewType": "XML",
            "transition": "slide",
            "clearControlAggregation": true,
            "viewId": "VerEmpleado",
            "viewName": "VerEmpleado"
          }
      }
    },
    "rootView": {
      "viewName": "rrhh.rrhh.view.App",
      "type": "XML",
      "async": true,
      "id": "app"
    }
  }
}
